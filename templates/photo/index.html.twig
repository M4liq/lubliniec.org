{% extends 'base.html.twig' %}

{% block title %}Photo index{% endblock %}

{% block body %}
    <h1>Photo index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Orientation_date</th>
                <th>Title</th>
                <th>Format</th>
                <th>Size</th>
                <th>Description</th>
                <th>Path</th>
                <th>Adding_date</th>
                <th>Subtitle</th>
                <th>Lastest_modification</th>
                <th>Topic</th>
                <th>Publicated</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for photo in photos %}
            <tr>
                <td>{{ photo.id }}</td>
                <td>{{ photo.date ? photo.date|date('Y-m-d') : '' }}</td>
                <td>{{ photo.orientationDate ? 'Yes' : 'No' }}</td>
                <td>{{ photo.title }}</td>
                <td>{{ photo.format }}</td>
                <td>{{ photo.size }}</td>
                <td>{{ photo.description }}</td>
                <td>{{ photo.path }}</td>
                <td>{{ photo.addingDate ? photo.addingDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ photo.subtitle }}</td>
                <td>{{ photo.lastestModification ? photo.lastestModification|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ photo.topic }}</td>
                <td>{{ photo.publicated ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('photo_show', {'id': photo.id}) }}">show</a>
                    <a href="{{ path('photo_edit', {'id': photo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('photo_new') }}">Create new</a>
{% endblock %}
