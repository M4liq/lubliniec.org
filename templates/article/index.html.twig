{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Article index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Subtitle</th>
                <th>Orientation_date</th>
                <th>Date</th>
                <th>Adding_date</th>
                <th>Lastest_modification</th>
                <th>Topic</th>
                <th>Publicated</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.subtitle }}</td>
                <td>{{ article.orientationDate ? 'Yes' : 'No' }}</td>
                <td>{{ article.date ? article.date|date('Y-m-d') : '' }}</td>
                <td>{{ article.addingDate ? article.addingDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ article.lastestModification ? article.lastestModification|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ article.topic }}</td>
                <td>{{ article.publicated ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}">show</a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_new') }}">Create new</a>
{% endblock %}
