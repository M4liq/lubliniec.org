{% extends 'base.html.twig' %}

{% block title %}Range index{% endblock %}

{% block body %}
    <h1>Range index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Lower</th>
                <th>Upper</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for range in ranges %}
            <tr>
                <td>{{ range.id }}</td>
                <td>{{ range.name }}</td>
                <td>{{ range.lower }}</td>
                <td>{{ range.upper }}</td>
                <td>
                    <a href="{{ path('range_show', {'id': range.id}) }}">show</a>
                    <a href="{{ path('range_edit', {'id': range.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('range_new') }}">Create new</a>
{% endblock %}
