<form method="post" action="{{ path('article_delete', {'id': article.id}) }}" onsubmit="return confirm('Czy napewno chcesz usunąć ten artykuł?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
    <button class="btn btn-danger ml-3">Usuń</button>
</form>
