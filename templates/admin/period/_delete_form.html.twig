<div class="col-12 pt-1 ml-3"> 
    <form method="post" action="{{ path('period_delete', {'id': period.id}) }}" onsubmit="return confirm('Czy napewno chcesz usunąć element?');">
        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ period.id) }}">
        <button class="btn btn-danger">Usuń</button>
    </form>
</div>
