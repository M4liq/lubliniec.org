{% extends 'admin/admin-main-page.html.twig' %}

{% block title %}<title>Lista Kategorii</title> {% endblock %}

{% block breadcrumbs %} 
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <a href="">Start</a>
          </li>
          <li class="breadcrumb-item" id="jquery-bread">
            <a  href="{{path("category_index")}}" >
                Kategorie
            </a>
          </li>
        </ol>
{% endblock %}

{% block pageContents %}
    <div class="col-12 pb-3 ml-3 resources-table">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nazwa</th>
                    <th>Akcje</th>
                </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>
                        <a href="{{ path('category_edit', {'id': category.id}) }}">Edytuj</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Brak zapisów</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('category_new') }}" class="btn btn-success">Dodaj nową kategorię</a>
    </div>
{% endblock %}
