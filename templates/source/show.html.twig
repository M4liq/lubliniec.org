<!DOCTYPE html>

<title>Source</title>

{% block body %}
    <h1>Source</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ source.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ source.name }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ source.date ? source.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ source.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('source_index') }}">back to list</a>

    <a href="{{ path('source_edit', {'id': source.id}) }}">edit</a>

    {{ include('source/_delete_form.html.twig') }}
{% endblock %}
